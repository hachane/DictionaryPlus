<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="900" styleClass="root" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.controllers.MainController">

      <AnchorPane fx:id="container" layoutX="130.0" layoutY="20.0" prefHeight="560" prefWidth="725" styleClass="container" />

      <Label fx:id="logo" layoutX="10.0" layoutY="10.0">
            <graphic>
                  <ImageView fitHeight="64" fitWidth="64.0" layoutX="3.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                              <Image url="@../utils/imgs/logo.png" />
                        </image>
                  </ImageView>
            </graphic>
      </Label>
      <Button fx:id="searchBtn" layoutX="10" layoutY="110" mnemonicParsing="false" prefHeight="64" prefWidth="64" styleClass="transparent-button" >
            <graphic>
                  <ImageView fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true">
                        <image>
                              <Image url="@../utils/icons/main/search.png" />
                        </image>
                  </ImageView>
            </graphic>
      </Button>


      <Button fx:id="translateBtn" layoutX="10" layoutY="210" mnemonicParsing="false" prefHeight="64" prefWidth="64" styleClass="transparent-button">
            <graphic>
                  <ImageView fitHeight="64" fitWidth="64" layoutX="28.0" layoutY="235.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                              <Image url="@../utils/icons/main/translate.png" />
                        </image>
                  </ImageView>
            </graphic>
      </Button>

      <Button fx:id="reviewBtn" layoutX="10" layoutY="310" mnemonicParsing="false" prefHeight="64" prefWidth="64" styleClass="transparent-button">
            <graphic>
                  <ImageView fitHeight="64" fitWidth="64" layoutX="28.0" layoutY="425.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                              <Image url="@../utils/icons/main/review.png" />
                        </image>
                  </ImageView>
            </graphic>
      </Button>

      <Button fx:id="editBtn" layoutX="10" layoutY="410" mnemonicParsing="false" prefHeight="64" prefWidth="64" styleClass="transparent-button">
            <graphic>
                  <ImageView fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true">
                        <image>
                              <Image url="@../utils/icons/main/edit.png" />
                        </image>
                  </ImageView>
            </graphic>
      </Button>

      <Button fx:id="exitBtn" layoutX="10" layoutY="510" mnemonicParsing="false" prefHeight="64" prefWidth="64" styleClass="transparent-button">
            <graphic>
                  <ImageView fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true">
                        <image>
                              <Image url="@../utils/icons/main/quit.png" />
                        </image>
                  </ImageView>
            </graphic>
      </Button>
</AnchorPane>
