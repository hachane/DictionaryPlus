            <Button fx:id="medium" layoutX="14.0" layoutY="76.0" mnemonicParsing="false" onAction="#easyButton" prefHeight="12.0" prefWidth="111.0" text="medium" />
            <Button fx:id="hard" layoutX="14.0" layoutY="135.0" mnemonicParsing="false" onAction="#hardButton" prefHeight="27.0" prefWidth="111.0" text="hard" />
         </children>
      </AnchorPane>
