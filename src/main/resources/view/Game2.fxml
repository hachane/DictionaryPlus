<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="715" prefWidth="500" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.controllers.Game2Controller">

    <stylesheets>
        <URL value="@../style/game2.css" />
    </stylesheets>

    <top>
        <VBox alignment="TOP_CENTER" minWidth="480.0">
         <AnchorPane prefHeight="0.0" prefWidth="500.0">
            <children>
               <Button fx:id="restart" alignment="CENTER" layoutX="371.0" layoutY="1.0" mnemonicParsing="false" styleClass="transparent-button" stylesheets="@../style/review.css">
                  <graphic>
                     <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../utils/icons/review/icons8-restart-48.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button fx:id="back" alignment="CENTER" contentDisplay="CENTER" layoutX="63.0" mnemonicParsing="false" styleClass="transparent-button" stylesheets="@../style/review.css">
                  <graphic>
                     <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../utils/icons/review/icons8-back-48.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Label fx:id="information" layoutX="219.0" layoutY="16.0" text="Information" />
            </children>
         </AnchorPane>
         <Pane prefHeight="5.0" prefWidth="500.0" />
        </VBox>
    </top>

    <center>
        <GridPane fx:id="userGuess" alignment="CENTER" hgap="5" onKeyPressed="#handleKeyPressed" prefHeight="501.0" prefWidth="480.0" vgap="5">
            <BorderPane.margin>
                <Insets bottom="15.0" top="15.0" />
            </BorderPane.margin>
        </GridPane>
    </center>

    <bottom>
        <VBox>
            <GridPane fx:id="keyboardRow1" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
                <padding>
                    <Insets top="10.0" />
                </padding>
            </GridPane>

            <GridPane fx:id="keyboardRow2" alignment="BOTTOM_CENTER" hgap="4" vgap="2" />

            <GridPane fx:id="keyboardRow3" alignment="BOTTOM_CENTER" hgap="4" vgap="2">
                <padding>
                    <Insets bottom="10.0" />
                </padding>
            </GridPane>
        </VBox>
    </bottom>

</BorderPane>
